.create_group {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: -120rpx 0;
  box-sizing: border-box;
  background-color: #f0f0f0;
}

.doc-title {
  font-size: 25px;
  line-height: 25px;
  color: #666;
  padding: 15px 0;
  margin: 20px 15px;
  border-bottom: 1rpx solid #e5e5e5;
}

.name {
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}

.cell {
  position: relative;
  padding: 12px 15px;
  display: flex;
  align-items: center;
  line-height: 1.4;
  font-size: 28rpx;
}

.cell::after {
  position: absolute;
  left: 15px;
  right: 0;
  bottom: 0;
  border-top: 1rpx solid #e5e5e5;
  background: #e5e5e5;
  content: ' ';
}

.form_item {
  line-height: 26px;
}

.form_title {
  float: left;
  width: 80px;
  font-size: 28rpx;
}

.form_title--top {
  align-self: flex-start;
}

.form_input {
  min-height: 26px;
}

.form_input{
  min-height: 26px;
}

.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}

.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section-title{
  font-size: 28rpx;
  /*color: #999999;*/
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

textarea {
    width: 700rpx;
    padding: 25rpx 0;
}
.textarea-wrp {
    padding: 0 25rpx;
    background-color: #fff;
}

